<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brich200.mobileideasportal.SubmitActivity"
    android:orientation="horizontal"
    android:id="@+id/layout">

    <GridLayout
        android:rowCount="1"
        android:columnCount="3"
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#262626"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <!--android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/cxInovationLogo"-->

        <ImageView
            android:src="@drawable/cx_innovations"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/cxInovationLogo"/>

        <ImageView
            android:src="@drawable/ideas_portal_logo"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/ideasPortalLogo"
            />

        <Spinner
            android:background="#D9FFA500"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:textStyle="bold" />
    </GridLayout>
    <GridLayout
        android:rowCount="1"
        android:columnCount="4"
        android:id="@+id/currentPageBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a8a8a8"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/navBar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ideas: "
            android:id="@+id/pageTitle" />

        <TextView
            android:layout_below="@+id/ideasPortalLogo"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/pageTitle"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/subPages"
            android:text="Individual Idea" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="Submit an Idea!"
            android:id="@+id/SubmitIdea"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:onClick="submitClicked"/>
        <ImageButton
            android:src="@drawable/magnifyingGlass"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="#a8a8a8"
            android:layout_gravity="center_horizontal"
            android:onClick="searchIdentifier"
            android:id="@+id/ideaSearch"/>

    </GridLayout>

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_below="@+id/currentPageBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:id="@+id/title"
                android:gravity="right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="7sp">
            <TextView
                android:textColor="#0080ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votes:"/>
            <TextView
                android:textColor="#0080ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/votes"
                android:minWidth="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:New" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/title_bar"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7sp"
                    android:text="Tags: ie) lab week july 2015"/>

                <TextView
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7sp"
                    android:id="@+id/tags"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Issue/Opportunity:"/>

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_issue"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Experience Impact:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customer_exp_imp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metrics Impact:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/metrics"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intellectual Property Status:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intellectual_property_status"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Teammate Emails:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teammates_email"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id:"/>
                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#0080ff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Modified:"/>

                <TextView
                    android:layout_marginTop="3.5sp"
                    android:layout_marginBottom="3.5sp"
                    android:textColor="#800000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/last_modified"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="7.5sp"
        android:layout_marginBottom="3.5sp"
        android:textColor="#e59400"
        android:background="#ffdb99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Contents"
        android:onClick="editContents"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/edit_contents"/>

    <Button
        android:layout_marginTop="7.5sp"
        android:layout_marginBottom="3.5sp"
        android:layout_marginLeft="20dp"
        android:textColor="#e59400"
        android:background="#ffdb99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Idea"
        android:onClick="getNextIdea"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@id/edit_contents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edit_contents">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up Vote"
            android:id="@+id/upvote"
            android:onClick="upVote"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down Vote"
            android:id="@+id/downvote"
            android:onClick="downVote" />
    </LinearLayout>

</RelativeLayout>
