<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:layout_marginLeft="13sp"
        android:layout_marginRight="13sp"></RelativeLayout>

    <RelativeLayout

        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:id="@+id/logInBox"
        >
        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:background="@android:color/holo_blue_dark"
            android:src="@drawable/ideas_portal_logo"
            android:id="@+id/ideasPortalLogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@android:color/holo_blue_dark"
            android:layout_below="@+id/ideasPortalLogo"
            android:id="@+id/slogan"
            android:text="Great Minds Think"
            android:textColor="#FFF"
            android:textStyle="italic"
            android:textSize="15sp"/>
        <TextView
            android:paddingTop="25dp"
            android:layout_below="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Comcast Email"
            android:textStyle="bold"
            android:id="@+id/usernameLabel"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:layout_below="@+id/usernameLabel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/url_bar"
            android:id="@+id/edit_email"
            android:inputType="text"
            android:hint="name@cable.comcast.com"
            android:backgroundTint="#999" />
        <TextView
            android:layout_below="@+id/edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Password"
            android:id="@+id/passwordLabel"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:layout_below="@+id/passwordLabel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/url_bar"
            android:id="@+id/edit_password"
            android:inputType="textPassword"
            android:hint="Password"
            android:backgroundTint="#999" />
        <LinearLayout
            android:paddingTop="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/forgotCredentials">
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text=" Forgot Username?          "/>
            <TextView
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="           Forgot Password? "/>
        </LinearLayout>
        <Button
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/LogInButton"
            android:layout_margin="20dp"

            android:padding="20dp"
            android:background="@android:color/holo_orange_light"
            android:onClick="LogIn"
            android:layout_below="@+id/forgotCredentials"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"></RelativeLayout>
</LinearLayout>