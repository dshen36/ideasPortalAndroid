<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brich200.mobileideasportal.SubmitActivity"
    android:orientation="horizontal"
    android:id="@+id/layout">

    <GridLayout
        android:rowCount="1"
        android:columnCount="3"
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#262626"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <!--android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/cxInovationLogo"-->

        <ImageView
            android:src="@drawable/cx_innovations"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/cxInovationLogo"/>

        <ImageView
            android:src="@drawable/ideas_portal_logo"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/ideasPortalLogo"
            />

        <Spinner
            android:background="#D9FFA500"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:textStyle="bold" />
    </GridLayout>
    <GridLayout
        android:rowCount="1"
        android:columnCount="4"
        android:id="@+id/currentPageBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a8a8a8"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/navBar"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="Ideas: "
            android:id="@+id/pageTitle" />

        <TextView
            android:layout_below="@+id/ideasPortalLogo"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/pageTitle"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/subPages"
            android:text="Directory" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="Submit an Idea!"
            android:id="@+id/SubmitIdea"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:onClick="submitClicked"/>
        <ImageButton
            android:src="@drawable/magnifyingGlass"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="#a8a8a8"
            android:layout_gravity="center_horizontal"
            android:onClick="searchIdentifier"
            android:id="@+id/ideaSearch"/>

    </GridLayout>
    <ScrollView
        android:layout_below="@+id/currentPageBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great Minds Think"/>
            <TextView
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/intro"
                android:text="Here are some of the great ideas that have been submitted     "
                android:gravity="right" />
            <GridLayout
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="10"
                android:paddingTop="4sp">
                <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill_horizontal"
                    android:paddingLeft="5sp"
                    android:paddingRight="4sp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"/>
                <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Votes"/>
                <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_columnSpan="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Title/Description"/>
                <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Comments"/>
                <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="4sp"
                    android:paddingRight="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Status"/>
            </GridLayout>
            <GridLayout
                android:background="#ababab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="10"
                android:paddingTop="4sp">
                <LinearLayout
                    android:layout_columnSpan="3"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Day"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Month"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/arrow_up"
                            android:layout_width="23dp"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                            android:text="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/arrow_down"
                            android:layout_width="23dp"
                            android:layout_height="23dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                            android:text="4"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="fill_horizontal"
                    android:paddingLeft="3.5sp"
                    android:paddingRight="3.5sp"
                    android:layout_columnSpan="4"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="50%">
                    <TextView
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Title of Idea or Concern"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slight Description of What the Article is Going to be About. Should only show maybe 2 lines at most before encountering a 'read more...'"/>
                    <TextView
                        android:textStyle="bold"
                        android:background="#ADD8E6"
                        android:textColor="#004080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tags"/>
                </LinearLayout>
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <TextView
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:paddingLeft="4sp"
                        android:paddingRight="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity= "center"
                        android:textSize="13sp"
                        android:text="Comments"/>
                    <TextView
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:paddingLeft="4sp"
                        android:paddingRight="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textSize="13sp"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:src="@drawable/star"
                        android:paddingRight="15sp"
                        android:layout_width="31dp"
                        android:layout_height="31dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:text="New!"/>
                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>