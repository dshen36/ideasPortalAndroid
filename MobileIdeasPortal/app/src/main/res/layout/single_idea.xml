<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:background="#ababab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="10"
        android:paddingTop="4sp"
        android:id="@+id/singleIdea">
        <LinearLayout
            android:layout_columnSpan="3"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day"
                android:textAlignment="center"
                android:id="@+id/day"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month"
                android:id="@+id/month"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:id="@+id/year"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/idea_id"/>

                    <ImageView
                        android:src="@drawable/arrow_up"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/arrow_up"
                        android:onClick="upVote"/>

                    <ImageView
                        android:src="@drawable/arrow_down"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/arrow_down"
                        android:onClick="downVote"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:text="4"
                    android:id="@+id/votes"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="fill_horizontal"
            android:paddingLeft="3.5sp"
            android:paddingRight="3.5sp"
            android:layout_columnSpan="4"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="openIdea">
            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Title of Idea or Concern"
                android:textAlignment="center"
                android:id="@+id/title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slight Description of What the Article is Going to be About. Should only show maybe 2 lines at most before encountering a 'read more...'"
                android:id="@+id/description"/>
            <TextView
                android:textStyle="bold"
                android:background="#ADD8E6"
                android:textColor="#004080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:id="@+id/tags"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnSpan="1"
            android:onClick="openIdea">
            <TextView
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="4sp"
                android:paddingRight="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity= "center"
                android:textSize="13sp"
                android:text="Comments"/>
            <TextView
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="4sp"
                android:paddingRight="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="13sp"
                android:text="0"
                android:id="@+id/comments"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:onClick="openIdea">
            <ImageView
                android:src="@drawable/star"
                android:paddingRight="15sp"
                android:layout_width="31dp"
                android:layout_height="31dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="New!"/>
        </LinearLayout>

    </GridLayout>

</LinearLayout>